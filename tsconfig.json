{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap":true,
        //"noImplicitAny": false,
        "module":"es2015",
        "target": "es6",
        "jsx": "preserve",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "reactNamespace": "React"
    },

    "exclude": [
        "node_modules",
        "typings",
        "target"
    ]
}